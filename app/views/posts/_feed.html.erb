<% @posts.each do |post| %>

  <div class="media border border-primary rounded p-2">
    <img src="https://api.adorable.io/avatars/64/abott@adorable.png" class="rounded mr-3" alt="...">
    <div class="media-body">
      <h5 class="mt-0"><%= post.title %></h5>
      <%= post.content %>
    </div>
  
  </div>

  <ul>
    <li><%= link_to 'Show', post %></li>
    <li><%= link_to 'Edit', edit_post_path(post) %></li>
    <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>
<% end %>